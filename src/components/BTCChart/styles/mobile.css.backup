/* ========== COMPREHENSIVE MOBILE STYLES ========== */
@media (max-width: 768px) {
  /* Chart SVG wrapper - minimal spacing on mobile */
  .btc-chart-svg-wrapper {
    margin-top: 20px !important;      /* ‚úÖ Minimal gap for mobile */
  }

  /* Main container adjustments */
  .btc-chart-container {
    height: auto;
    min-height: 100vh;
    max-width: 100%;
    margin: 0;
    padding: 8px 0;
    border-radius: 0;
    display: flex !important;        /* ‚úÖ CRITICAL: Enable flexbox for order property */
    flex-direction: column !important;
    justify-content: flex-start;
  }

  /* Connection status - move to top right corner and make smaller */
  .btc-chart-container > div:first-child {
    order: 1;
    position: absolute !important;
    top: 5px !important;
    right: 5px !important;
    margin: 0 !important;
    padding: 4px 8px !important;
    font-size: 8px !important;
    border-radius: 12px !important;
    z-index: 10;
  }

  .btc-chart-container > div:first-child > div:first-child {
    width: 6px !important;
    height: 6px !important;
  }
  
  /* ‚úÖ Timeframe controls - Same row as percentage (right side) */
.btc-timeframe-controls {
  position: absolute !important;     /* ‚úÖ Absolute to stay on same row */
  top: 60px !important;              /* ‚úÖ Align with percentage row (adjusted) */
  right: 10px !important;
  width: auto !important;
  max-width: 160px !important;       /* Keep same compact size */
  padding: 3px 4px !important;
  gap: 2px !important;
  background-color: rgba(26, 26, 26, 0.9) !important;
  border-radius: 4px !important;
  border: 1px solid var(--bg-hover) !important;
  z-index: 20 !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
}

.btc-timeframe-label {
  font-size: 8px !important;         /* üîß Reduced from 9px */
  margin-right: 3px !important;      /* üîß Reduced from 4px */
  color: var(--text-primary) !important;
}

.btc-timeframe-button {
  padding: 4px 3px 2px 3px!important;       /* üîß Reduced from 4px 8px */
  font-size: 9px !important;         /* üîß Reduced from 10px */
  min-width: 28px !important;        /* üîß Reduced from 34px */
  width: 28px !important;            /* üîß Reduced from 34px */
}

  /* ‚úÖ Price display - 2-ROW BINANCE STYLE */
  .btc-price {
    order: -10 !important;
    position: relative !important;
    width: 100% !important;
    padding: 12px 16px 8px 45px !important;  /* ‚úÖ Balanced padding */
    margin: 0 !important;
    display: flex !important;
    flex-direction: column !important;
    align-items: flex-start !important;
    background-color: transparent !important;
    flex-shrink: 0 !important;
    gap: 4px !important;                     /* ‚úÖ Small gap between rows */
  }
  
  /* Row 1 container: Icon + BTC + Price (without wrapping) */
  .btc-price > div:first-child {
    display: flex !important;
    align-items: center !important;
    flex-wrap: wrap !important;        /* ‚úÖ Allow wrapping to second row */
    gap: 6px !important;
    width: 100% !important;
  }
  
  /* BTC Icon - properly sized */
  .btc-price .btc-icon {
    width: 28px !important;
    height: 28px !important;
    margin-right: 4px !important;
    order: 1 !important;
  }
  
  /* BTC Text - LARGE (same size as price) */
  .btc-price .btc-usdt {
    font-size: 28px !important;        /* ‚úÖ Same as price */
    font-weight: 900 !important;       /* ‚úÖ Bolder to match price */
    margin-right: 12px !important;     /* ‚úÖ Better spacing before price */
    color: var(--text-primary) !important;
    order: 2 !important;
  }
  
  /* Price Value - LARGE, same row as Icon+BTC */
  .btc-price .btc-value {
    font-size: 28px !important;
    font-weight: 900 !important;
    line-height: 1.2 !important;
    letter-spacing: -0.5px !important;
    order: 3 !important;
    flex: 1 1 auto !important;         /* ‚úÖ Allow price to grow but stay on same row */
  }
  
  /* Arrow + UP/DOWN label - Second row */
  .btc-price .btc-label {
    font-size: 14px !important;
    font-weight: 600 !important;
    display: flex !important;
    align-items: center !important;
    gap: 4px !important;
    line-height: 1 !important;
    margin-left: 32px !important;      /* ‚úÖ Align under BTC text */
    order: 4 !important;
    width: 100% !important;            /* ‚úÖ Force to second row */
  }
  
  /* Arrow icon in label */
  .btc-price .btc-label span {
    font-size: 12px !important;
  }
  
  /* ‚úÖ SVG container (chart) - place AFTER price */
  .btc-chart-container > div[style*="marginTop"] {
    order: 0 !important;
    margin-top: 0 !important;
  }

  /* Chart area adjustments - place after price */
  .btc-chart-container > div:nth-child(2) {
    order: 0 !important;              /* ‚úÖ Chart comes after price (order: -10) */
    margin-top: 0 !important;
  }
  
  /* ‚úÖ Timer container - place after chart */
  .btc-timer-container {
    order: 1 !important;
  }
  
  /* ‚úÖ Control row (battle timer buttons) - place after timer */
  .btc-control-row {
    order: 2 !important;
  }
  
  /* ‚úÖ Trends container - place at bottom */
  .btc-trends-full-container {
    order: 3 !important;
  }

  /* Bottom container - stack vertically on mobile */
  .btc-bottom-container {
    order: 4;
    flex-direction: column !important;
    gap: 12px !important;
    margin: 12px auto 8px auto !important;
    max-width: calc(100vw - 16px) !important;
    width: calc(100vw - 16px) !important;
    padding: 0 8px !important;
    left: 50% !important;
    transform: translateX(-50%) !important;
    position: relative !important;
    
    /* Override JSX inline styles */
    display: flex !important;
  }

  /* Trends container - full width and better spacing */
  .btc-trends-container {
    flex: 1 !important;
    min-width: 100% !important;
    width: 100% !important;
    padding: 12px !important;
    gap: 6px !important;
    margin: 0 !important;
    box-sizing: border-box !important;
    
    /* Override JSX inline styles */
    display: flex !important;
    align-items: center !important;
    justify-content: center !important;
  }

  /* Betting interface - mobile layout: balance+amount in row 1, buttons in row 2 */
  .btc-betting-interface {
    flex: 1 !important;
    min-width: 100% !important;
    width: 100% !important;
    padding: 16px !important;
    background: rgba(26, 26, 26, 0.95) !important;
    border: 1px solid var(--border-color) !important;
    margin: 0 !important;
    box-sizing: border-box !important;
    
    /* Use CSS Grid for precise control */
    display: grid !important;
    grid-template-columns: 1fr 1fr !important;
    grid-template-rows: auto auto !important;
    gap: 16px 12px !important;
    align-items: center !important;
  }

  /* Balance display - first column, first row */
  .btc-betting-interface > div:first-child {
    grid-column: 1 !important;
    grid-row: 1 !important;
    text-align: left !important;
    padding: 0 !important;
    background: transparent !important;
    border: none !important;
    justify-self: start !important;
  }

  .btc-betting-interface > div:first-child span {
    font-size: 16px !important;
    font-weight: 600 !important;
    color: var(--text-primary) !important;
    white-space: nowrap !important;
  }

  /* Amount input - second column, first row */
  .btc-betting-interface > div:nth-child(2) {
    grid-column: 2 !important;
    grid-row: 1 !important;
    justify-self: end !important;
    width: auto !important;
  }

  .btc-betting-interface > div:nth-child(2) > div {
    width: 180px !important;
  }

  .btc-betting-interface input[type="number"] {
    width: 180px !important;
    height: 12px !important;
    font-size: 16px !important;
    padding: 10px 10px 10px 75px !important;
    background: rgba(42, 42, 42, 0.9) !important;
    border: 1px solid var(--border-color-hover) !important;
    color: var(--text-primary) !important;
  }

  .btc-betting-interface input[type="number"]:focus {
    border-color: var(--color-up) !important;
    box-shadow: 0 0 10px rgba(76, 175, 80, 0.3) !important;
  }

  .btc-betting-interface input[type="number"] + div span {
    font-size: 12px !important;
    color: var(--text-muted) !important;
  }

  /* Button container - spans both columns, second row */
  .button-container {
    grid-column: 1 / -1 !important;
    grid-row: 2 !important;
    width: 100% !important;
    height: 60px !important;
    max-width: 100px !important;
    margin: 0 auto !important;
    justify-self: center !important;
  }

  .button-half {
    height: 60px !important;
    font-size: 18px !important;
    min-width: 140px !important;
  }

  .up-text, .down-text {
    font-size: 18px !important;
    font-weight: 700 !important;
    letter-spacing: 2px !important;
  }

  /* Trends items - make them more touch-friendly */
  .btc-trends-container > div:not(:first-child):not(:last-child) {
    min-width: 42px !important;
    padding: 6px 3px !important;
    font-size: 11px !important;
  }
  
  /* ‚úÖ MOBILE: Hide all trends except the last 5 most recent */
  .btc-trends-container .btc-trend-button:not(:nth-last-child(-n+6)) {
    display: none !important;        /* Hide all except: Details button + last 5 trends */
  }
  
  /* Make visible trends slightly larger for mobile */
  .btc-trends-container .btc-trend-button {
    min-width: 45px !important;      /* Wider for easier tapping */
    padding: 8px 10px !important;    /* More padding */
    font-size: 12px !important;      /* Bigger text */
  }

  /* Details button */
  .btc-trends-container button {
    padding: 6px 12px !important;
    font-size: 11px !important;
  }

  /* Modal adjustments for mobile */
  .btc-chart-container div[style*="position: fixed"] > div {
    width: 95% !important;
    max-width: 95% !important;
    margin: 10px;
    max-height: 90vh !important;
  }

  /* Additional modal styling for better mobile support */
  div[style*="position: fixed"][style*="z-index: 1000"] {
    display: flex !important;
    align-items: center !important;
    justify-content: center !important;
    padding: 10px !important;
  }

  div[style*="position: fixed"][style*="z-index: 1000"] > div {
    width: 95% !important;
    max-width: 95% !important;
    max-height: 85vh !important;
    margin: 0 !important;
    padding: 16px !important;
    border-radius: 12px !important;
    overflow-y: auto !important;
  }

  /* Modal header adjustments for mobile */
  div[style*="position: fixed"] h2 {
    font-size: 18px !important;
    margin-bottom: 8px !important;
  }

  /* Modal content scrolling for mobile */
  div[style*="max-height: 60vh"] {
    max-height: 50vh !important;
    overflow-y: auto !important;
  }

  /* SVG chart - make it responsive */
  svg {
    max-width: 100%;
    height: auto;
  }

}

