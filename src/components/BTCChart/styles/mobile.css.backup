}


.btc-battle-period-label {
  color: var(--text-primary);
  font-size: 13px;
  font-weight: 600;
  font-family: system-ui, -apple-system, sans-serif;
  white-space: nowrap;
  margin-right: 4px;
}

.btc-period-button {
  padding: 2px 28px;
  border-radius: 16px;
  border: 1px solid var(--border-color);
  background-color: var(--bg-input);
  color: var(--text-primary);
  font-size: 13px;
  font-weight: 500;
  font-family: system-ui, -apple-system, sans-serif;
  cursor: pointer;
  transition: all 0.2s ease;
  min-width: 65px;
  text-transform: uppercase;
}

.btc-period-button:hover {
  background-color: var(--bg-hover);
  border-color: var(--border-color-hover);
}

.btc-period-button.active {
  border: 1px solid var(--color-up);
  background-color: var(--color-up);
  color: var(--bg-main);
  font-weight: 700;
}

.btc-period-button.active:hover {
  background-color: var(--color-up);
  border-color: var(--color-up);
}

.btc-period-button.disabled {
  opacity: 0.7;
  cursor: not-allowed;
}

.btc-period-button.disabled:hover {
  transform: none !important;
}

/* Keep active button's green color even when disabled */
.btc-period-button.active.disabled {
  opacity: 0.7;
  cursor: not-allowed;
  background-color: var(--color-up) !important;
  border-color: var(--color-up) !important;
  color: var(--bg-main) !important;
}

.btc-period-button.active.disabled:hover {
  background-color: var(--color-up) !important;
  border-color: var(--color-up) !important;
  transform: none !important;
}

/* Betting Interface */
.btc-betting-interface {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 8px 16px;
  background-color: var(--bg-section);
  border-radius: 8px;
  gap: 8px;
  flex: 1 1 auto;
}

.btc-balance-display {
  display: flex;
  align-items: center;
  min-width: auto;
}

.btc-balance-text {
  color: var(--text-primary);
  font-size: 13px;
  font-weight: 600;
  font-family: system-ui, -apple-system, sans-serif;
  white-space: nowrap;
}

.btc-amount-container {
  display: flex;
  align-items: center;
  position: relative;
  flex: 0 0 auto;
}

.btc-amount-input-wrapper {
  position: relative;
  display: flex;
  align-items: center;
}

.btc-amount-input {
  width: 120px;
  padding: 6px 6px 6px 55px;
  border-radius: 16px;
  border: 1px solid var(--border-color);
  background-color: var(--bg-input);
  color: var(--text-primary);
  font-size: 13px;
  text-align: right;
  outline: none;
  height: 28px;
  box-sizing: border-box;
  -moz-appearance: textfield;
  appearance: textfield;
  font-weight: 600;
}

.btc-amount-label {
  position: absolute;
  left: 6px;
  top: 50%;
  transform: translateY(-50%);
  color: var(--text-primary);
  padding: 2px 6px;
  border-radius: 10px;
  font-size: 12px;
  font-weight: 700;
  font-family: system-ui, -apple-system, sans-serif;
  white-space: nowrap;
  pointer-events: none;
}

/* Button Container and UP/DOWN Buttons */
.button-container .btc-period-button.disabled,
.button-container .button-half.disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

