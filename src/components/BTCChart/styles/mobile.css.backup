/* ========================================
   TRENDS DISPLAY STYLES
   ======================================== */

/* Trends Full Container */
.btc-trends-full-container {
  display: flex;
  justify-content: center;
  margin: 0 auto 4px auto;
  max-width: 900px;
  width: calc(100% - 32px);
}

/* Trends Container */
.btc-trends-container {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  padding: 8px 12px;
  background-color: var(--bg-input);
  border-radius: 6px;
  width: 100%;
  position: relative;
}

.btc-trends-label {
  color: var(--text-primary);
  font-size: 12px;
  font-weight: 500;
  font-family: system-ui, -apple-system, sans-serif;
  white-space: nowrap;
}

.btc-trend-button {
  padding: 4px 8px;
  border-radius: 20px;
  font-size: 10px;
  font-weight: 600;
  color: var(--text-primary);
  min-width: 35px;
  text-align: center;
  transition: all 0.2s ease;
  text-transform: uppercase;
}

.btc-trend-button.up {
  background-color: var(--color-up);
}

.btc-trend-button.down {
  background-color: #f44336;
}

.btc-trend-button.draw {
  background-color: var(--color-info);
}

.btc-trend-button.latest {
  box-shadow: 0 0 8px rgba(76, 175, 80, 0.6);
}

.btc-trend-button.latest.down {
  box-shadow: 0 0 8px rgba(244, 67, 54, 0.6);
}

.btc-trend-button.latest.draw {
  box-shadow: 0 0 8px rgba(118, 168, 229, 0.6);
}

/* Bet Price Indicator Container */
.bet-price-indicator {
  /* Container for the entire bet price indicator group */
}

/* Horizontal Dotted Line */
.bet-price-indicator line {
  stroke: var(--color-warning);           /* Golden yellow color */
  stroke-width: 1;           /* Line thickness */
  stroke-dasharray: 5 5;     /* Dotted pattern: 8px dash, 4px gap */
  opacity: 0.9;              /* Slight transparency */
}

/* Price Label Background Rectangle */
.bet-price-indicator rect {
  fill: var(--color-warning);             /* Golden yellow background */
  rx: 4;                     /* Rounded corners (4px radius) */
  opacity: 0.9;              /* Slight transparency */
  width: 75px;               /* Label width */
  height: 18px;              /* Label height */
}

/* Price Label Text */
.bet-price-indicator text {
  fill: var(--text-dark);            /* Black text color */
  font-size: 11px;           /* Text size */
  font-weight: 600;          /* Semi-bold */
  font-family: monospace;    /* Monospace font */
  text-anchor: middle;       /* Horizontal center alignment */
  dominant-baseline: central; /* Vertical center alignment */
  alignment-baseline: middle; /* Additional vertical centering */
}