    max-width: 100% !important;
  }
  
  .btc-battle-period-label {
    font-size: 13px !important;
    margin-right: 6px !important;
    width: 100% !important;          /* ‚úÖ Full width label */
    text-align: center !important;   /* ‚úÖ Center label */
  }
  
  .btc-period-button {
