  }

  /* Adjust modal content height for small screens */
  div[style*="max-height: 60vh"] {
    max-height: 45vh !important;
  }

}

/* Audio Controls */

/* Start Pop-Up windows Result Popup Animations */
@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes fadeInDelayed {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes winPulse {
  0% {
    transform: scale(0.8);
    opacity: 0;
  }
  50% {
    transform: scale(1.1);
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

@keyframes lossPulse {
  0% {
    transform: scale(0.8);
    opacity: 0;
  }
  50% {
    transform: scale(1.05);
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

/* Responsive popup adjustments */
@media (max-width: 768px) {
  .result-popup-main-text {
    font-size: 48px !important;
  }
  
  .result-popup-subtitle {
    font-size: 18px !important;
  }
  
  .result-popup-amount {
    font-size: 24px !important;
  }
}

/* Result Popup Styles */
.result-popup-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.8);
  backdrop-filter: blur(10px);
  z-index: 2000;
  display: flex;
  justify-content: center;
  align-items: center;
  animation: fadeIn 0.5s ease-in-out;
}

.result-popup-container {
  border-radius: 24px;
  padding: 40px 60px;
  text-align: center;
  transform: scale(1);
  max-width: 90vw;
  min-width: 320px;
}

.result-popup-container.win {
  background-color: var(--bg-popup);
  box-shadow: 0 10px 30px rgba(72, 205, 92, 0.4), 0 0 20px rgba(52, 178, 70, 0.2);
  animation: winPulse 0.6s ease-out;
}

.result-popup-container.loss {
  background-color: var(--bg-popup);
  box-shadow: 0 10px 30px rgba(255, 46, 31, 0.4), 0 0 100px rgba(244, 67, 54, 0.2);
  animation: lossPulse 0.6s ease-out;
}

.result-popup-main-text {
  font-size: 92px;
  font-weight: 900;
  color: var(--text-primary);
  text-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
  margin-bottom: 10px;
  font-family: system-ui, -apple-system, sans-serif;
  letter-spacing: 4px;
}

.result-popup-prices {
  font-size: 16px;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 15px;
  font-family: monospace;
  padding: 8px 16px;
  border-radius: 12px;
  display: inline-block;
}

.result-popup-subtitle {
  font-size: 24px;
  font-weight: 600;
  text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
  margin-bottom: 30px;
  font-family: system-ui, -apple-system, sans-serif;
}

.result-popup-subtitle.win {
  color: var(--color-success);
}

.result-popup-subtitle.loss {
  color: var(--text-primary);
}

.result-popup-amount {
  font-size: 32px;
  font-weight: 700;
  color: var(--text-primary);
  text-shadow: 0 2px 15px rgba(0, 0, 0, 0.4);
  font-family: monospace;
  background: var(--bg-amount-label);
  padding: 15px 25px;
  border-radius: 20px;
  display: inline-block;
}

.result-popup-close-container {
  margin-top: 30px;
  opacity: 0;
  animation: fadeInDelayed 0.5s ease-in 2s forwards;
}

.result-popup-close-btn {
  background: rgba(255, 255, 255, 0.2);
  border: 2px solid rgba(255, 255, 255, 0.4);
  border-radius: 25px;
  color: var(--text-primary);
  font-size: 16px;
  font-weight: 600;
  padding: 12px 24px;
  cursor: pointer;
  transition: all 0.3s ease;
  font-family: system-ui, -apple-system, sans-serif;
  backdrop-filter: blur(10px);
}

.result-popup-close-btn:hover {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(1.05);
}

/* Center Connection Status Message Animation */
@keyframes fadeInScale {
  0% {
    opacity: 0;
    transform: translate(-50%, -50%) scale(0.8);
  }
  100% {
    opacity: 1;
    transform: translate(-50%, -50%) scale(1);
  }
}

/* Center Connection Status Message */
.center-connection-status {
  position: absolute;
  top: 30%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 20;
  color: white;
  padding: 2px 12px;
  border-radius: 20px;
  font-size: 13px;
  font-weight: 400;
  text-align: center;
  animation: fadeInScale 0.3s ease-out;
}

.center-connection-status.connecting {
  background: rgba(244, 67, 54, 0.75); /* Red for connecting */
}

.center-connection-status.connected {
  background: rgba(77, 175, 80, 0.75); /* Green for connected */
}

.center-connection-status.waiting {
  background: rgba(255, 193, 7, 0.95); /* Yellow/orange for waiting */
}

